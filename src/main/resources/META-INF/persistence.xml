<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="HIBERNATE" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.example.projetjeegroupeq.model.Employee</class>
        <class>com.example.projetjeegroupeq.model.Department</class>
        <class>com.example.projetjeegroupeq.model.Project</class>
        <class>com.example.projetjeegroupeq.model.Pay</class>
        <class>com.example.projetjeegroupeq.model.Role</class>
        <class>com.example.projetjeegroupeq.model.EmployeeRole</class>
        <class>com.example.projetjeegroupeq.model.EmployeeProject</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Artic"/>
            <property name="jakarta.persistence.jdbc.user" value="artic_user"/>
            <property name="jakarta.persistence.jdbc.password" value="monSuperPass"/>

            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
